{
    "name": "poc-design-system",
    "version": "0.0.1",
    "description": "Stencil Component Starter",
    "main": "dist/index.cjs.js",
    "module": "dist/index.js",
    "es2015": "dist/esm/index.mjs",
    "es2017": "dist/esm/index.mjs",
    "types": "dist/types/index.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "unpkg": "dist/poc-design-system/poc-design-system.esm.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/ionic-team/stencil-component-starter.git"
    },
    "files": [
        "dist/",
        "loader/"
    ],
    "scripts": {
        "build": "stencil build",
        "start": "stencil build --dev --watch --serve",
        "start:storybook": "conc \"npx nodemon -L\" \"npm run storybook\"",
        "test": "stencil test --spec --e2e",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "generate": "stencil generate",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "lint": "npx eslint \"src/**/*.{ts,tsx}\"",
        "lint:fix": "npx eslint \"src/**/*.{ts,tsx}\" --fix"
    },
    "dependencies": {
        "@stencil/core": "^4.0.0"
    },
    "devDependencies": {
        "@stencil/sass": "^3.0.4",
        "@storybook/addon-essentials": "^7.0.27",
        "@storybook/addon-interactions": "^7.1.0",
        "@storybook/addon-links": "^7.0.27",
        "@storybook/blocks": "^7.0.27",
        "@storybook/html": "^7.1.0",
        "@storybook/html-vite": "^7.1.0",
        "@storybook/testing-library": "^0.0.14-next.2",
        "@storybook/web-components": "^7.0.27",
        "@storybook/web-components-vite": "^7.0.27",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.11",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "concurrently": "^8.2.0",
        "eslint": "^8.44.0",
        "eslint-plugin-hangar": "./eslint-plugin-hangar/dist",
        "eslint-plugin-html": "^7.1.0",
        "eslint-plugin-storybook": "^0.6.12",
        "jest": "^27.5.1",
        "jest-cli": "^27.5.1",
        "lit": "^2.7.6",
        "nodemon": "^3.0.1",
        "puppeteer": "^20.7.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sass": "^1.64.1",
        "storybook": "^7.0.26",
        "typescript": "^5.1.6"
    },
    "license": "MIT"
}
